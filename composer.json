{
    "name": "sylarele/laravel-set",
    "description": "Set of interfaces, objects, and practices to standardise Laravel backends",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Sylarele\\LaravelSet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sylarele\\LaravelSet\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "require": {
        "php": ">=8.3",
        "laravel/framework": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.1",
        "shipmonk/composer-dependency-analyser": "^1.8",
        "friendsofphp/php-cs-fixer": "^3.88",
        "phpunit/phpunit": "^12.4",
        "orchestra/testbench": "^10.7",
        "orchestra/testbench-core": "^10.8"
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ]
    }
}
